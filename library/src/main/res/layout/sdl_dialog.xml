<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/SDL.Layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView style="@style/SDL.ScrollView">

        <LinearLayout style="@style/SDL.Layout">

            <LinearLayout style="@style/SDL.Layout.Main">

                <TextView
                    style="@style/SDL.TextView.Title"
                    android:id="@+id/sdl_title"
                    tools:text="Title" />

                <TextView
                    style="@style/SDL.TextView.Message"
                    android:id="@+id/sdl_message"
                    tools:text="Lorem ipsum doler samet Jane is awesome guy and Kaylee is so hot." />
            </LinearLayout>

            <FrameLayout
                style="@style/SDL.Layout.Custom"
                android:id="@+id/sdl_custom" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout style="@style/SDL.Layout.Buttons">

        <Button
            style="@style/SDL.Button"
            tools:text="Neutral"
            android:id="@+id/sdl_button_neutral" />

        <View style="@style/SDL.Expander" />

        <Button
            style="@style/SDL.Button"
            tools:text="Negative"
            android:id="@+id/sdl_button_negative" />

        <Button
            style="@style/SDL.Button"
            tools:text="Positive"
            android:id="@+id/sdl_button_positive" />
    </LinearLayout>
</LinearLayout>